<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ED0606"
    tools:context=".MainPage">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="169dp"
        android:layout_height="156dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.027"
        app:srcCompat="@drawable/logocropped" />

    <Button
        android:id="@+id/signout"
        android:layout_width="136dp"
        android:layout_height="58dp"
        android:onClick="SignOut"
        android:shadowColor="#7E4949"
        android:text="SignOut"
        android:textSize="18sp"
        app:backgroundTint="#2E1010"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.425"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.139"
        app:rippleColor="#B6B3B3"
        app:strokeColor="#AE9E9E" />

    <Button
        android:id="@+id/button"
        android:layout_width="141dp"
        android:layout_height="76dp"
        android:text="Otp Verify"
        android:textColor="#E6DEDE"
        app:backgroundTint="#2A0965"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.059"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signout"
        app:layout_constraintVertical_bias="0.076" />

    <Button
        android:id="@+id/button3"
        android:layout_width="141dp"
        android:layout_height="76dp"
        android:layout_marginTop="26dp"
        android:onClick="forgotPass"
        android:text="forgot pass"
        android:textColor="#E6DEDE"
        app:backgroundTint="#2A0965"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.761"
        app:layout_constraintStart_toEndOf="@+id/button"
        app:layout_constraintTop_toBottomOf="@+id/signout"
        app:layout_constraintVertical_bias="0.003" />
</androidx.constraintlayout.widget.ConstraintLayout>